<script type="text/javascript">

    function bindmanageprofile() {
        $('#ManageProfileDataTable').html('<center><img src="../Themes/Socioboard/Contents/img/admin/loading.gif" /></center>');
        $.ajax({
            type: 'POST',
            url: '../UserDetails/LoadManageProfile',
            success: function (msg) {
                //alert(msg);
                $('#ManageProfileDataTable').html(msg);
                $('#ManageProfileDataTable').dataTable();
            },
        });
    }

    function EditProfilesDetails(ProfileId,UserId,Network)
    {
        window.top.location.href = "../UserDetails/EditProfileDetails?ProfileId=" + ProfileId + "&UserId=" + UserId + "&Network=" + Network;
    }


    $(document).ready(function () {
        bindmanageprofile();
    });
