            type: 'POST',
            url: '../Package/LoadPackage',
            success: function (msg) {
                //alert(msg);
                $('#ManagePackageTable').html(msg);
                $('#ManagePackageTable').dataTable();
            },
        });
    }
    function EditPackageDetails(id) {
        
        window.top.location.href = "../Package/EditPackage?Id=" + id;
        
    }

    $(document).ready(function () {
        bindmanagePackage();
    });
